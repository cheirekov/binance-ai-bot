NODE_ENV=development
PORT=8788
FRONTEND_ORIGIN=http://localhost:4173

# Binance API credentials (use restricted keys)
BINANCE_API_KEY=your_key
BINANCE_API_SECRET=your_secret
BINANCE_BASE_URL=https://api.binance.com

# Optional: place trades only if set to true
TRADING_ENABLED=false

# OpenAI API
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini

# Strategy defaults (use EU-friendly BTCEUR by default; adjust as needed)
SYMBOL=BTCEUR
QUOTE_ASSET=EUR
ALLOWED_SYMBOLS=BTCEUR,ETHEUR,BTCUSDT,ETHUSDT,BTCUSDC,ETHUSDC,SOLUSDT,BNBUSDT
ALLOWED_QUOTES=USDT,USDC,EUR
AUTO_SELECT_SYMBOL=true
AUTO_DISCOVER_SYMBOLS=true
MIN_QUOTE_VOLUME=5000000
MAX_VOLATILITY_PCT=18
BLACKLIST_SYMBOLS=

# News sentiment (optional)
NEWS_FEEDS=https://rss.app/feeds/tJm8nlqwIBwQnS5s.xml,https://www.coindesk.com/arc/outboundfeeds/rss/
NEWS_CACHE_MINUTES=15
NEWS_WEIGHT=2
PERSISTENCE_PATH=/app/data/state.json
AUTO_TRADE_ENABLED=false
AUTO_TRADE_HORIZON=short
AUTO_TRADE_MIN_CONFIDENCE=55
AUTO_TRADE_COOLDOWN_MINUTES=90
DAILY_LOSS_CAP_PCT=3
SLIPPAGE_BPS=8
OCO_ENABLED=true
MAX_POSITION_SIZE_USDT=200
RISK_PER_TRADE_BP=50
REFRESH_SECONDS=30

# Frontend
VITE_API_URL=http://localhost:8788
