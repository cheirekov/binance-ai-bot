NODE_ENV=development                         # dev/production toggle
PORT=8788                                    # API port
FRONTEND_ORIGIN=http://localhost:4173        # Allowed origin for CORS

# Binance API credentials (use restricted keys)
BINANCE_API_KEY=your_key
BINANCE_API_SECRET=your_secret
BINANCE_BASE_URL=https://api.binance.com     # For testnet: https://testnet.binance.vision

# Optional: place trades only if set to true
TRADING_ENABLED=false

# OpenAI API
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini                    # Upgrade to gpt-4.1/gpt-4o for stronger reasoning

# Strategy defaults
SYMBOL=BTCEUR                                # Default symbol on startup
QUOTE_ASSET=EUR                              # Display fallback quote
ALLOWED_SYMBOLS=BTCEUR,ETHEUR,BTCUSDT,ETHUSDT,BTCUSDC,ETHUSDC,SOLUSDT,BNBUSDT  # Seed universe
ALLOWED_QUOTES=USDT,USDC,EUR                 # Quotes allowed in auto-discovery
AUTO_SELECT_SYMBOL=true                      # Pick best symbol each refresh
AUTO_DISCOVER_SYMBOLS=true                   # Pull tradable symbols from exchangeInfo
MIN_QUOTE_VOLUME=5000000                     # 24h quote-volume floor (applies to stable/fiat quotes)
MAX_VOLATILITY_PCT=18                        # 24h high/low volatility cap
BLACKLIST_SYMBOLS=                           # Comma list to block symbols

# News sentiment (optional)
NEWS_FEEDS=https://rss.app/feeds/tJm8nlqwIBwQnS5s.xml,https://www.coindesk.com/arc/outboundfeeds/rss/
NEWS_CACHE_MINUTES=15                        # Cache duration for feeds
NEWS_WEIGHT=2                                # Influence of sentiment in scoring

# Persistence
PERSISTENCE_PATH=/app/data/state.json        # Mounted volume path for state

# Auto-trading
AUTO_TRADE_ENABLED=false                     # true enables auto-order placement
AUTO_TRADE_HORIZON=short                     # Preferred horizon; dynamic selector still runs
AUTO_TRADE_MIN_CONFIDENCE=55                 # Min confidence % to trade
AUTO_TRADE_COOLDOWN_MINUTES=90               # Cooldown per symbol/horizon (minutes)
DAILY_LOSS_CAP_PCT=3                         # Halt auto-trade if mark-to-market loss exceeds this %
SLIPPAGE_BPS=8                               # Reduce size by this many bps to account for slippage
OCO_ENABLED=true                             # Place TP/SL OCO after auto-entry (if supported)

# Risk sizing
MAX_POSITION_SIZE_USDT=200                   # Max notional used for sizing (USDT-equivalent)
RISK_PER_TRADE_BP=50                         # Basis points risked per trade (50=0.5%)
REFRESH_SECONDS=30                           # Strategy refresh interval

# API/UI auth
API_KEY=change_me                            # Required in x-api-key header if set
CLIENT_KEY=change_me                         # Frontend uses this to call API
BASIC_AUTH_USER=bot                          # UI basic auth user
BASIC_AUTH_PASS=botpass                      # UI basic auth password

# Frontend
VITE_API_URL=http://localhost:8788           # API endpoint for frontend
VITE_CLIENT_KEY=change_me                    # Matches CLIENT_KEY for API calls
