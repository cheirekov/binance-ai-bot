### Symbols / universe
SYMBOL=BTCEUR
QUOTE_ASSET=EUR
HOME_ASSET=EUR

TRADE_UNIVERSE=
QUOTE_ASSETS=USDT,USDC,EUR
TRADE_DENYLIST=
