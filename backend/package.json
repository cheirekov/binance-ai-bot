{
  "name": "binance-ai-bot-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Backend API for Binance AI trading bot with OpenAI-driven strategies.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src",
    "test": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@binance/connector": "^3.1.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^8.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^4.25.2",
    "openai": "^4.24.7",
    "pino": "^8.16.0",
    "pino-pretty": "^11.2.0",
    "rss-parser": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.2",
    "@vitest/coverage-v8": "^1.1.2"
  }
}
